{
  "manifest_version": 3,
  "name": "Cookie Manager",
  "version": "1.0",
  "permissions": ["tabs","privacy", "cookies",  "storage"],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
