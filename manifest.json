{
  "manifest_version": 3,
  "name": "Cookie Manager",
  "version": "1.0",

  "description": "Extension pour bloquer les cookies de suivi et v√©rifier les sites malveillants",
  "permissions": ["tabs","privacy", "cookies",  "storage", "activeTab"],
  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
